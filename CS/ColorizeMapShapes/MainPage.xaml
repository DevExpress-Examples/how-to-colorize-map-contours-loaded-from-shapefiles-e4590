<UserControl x:Class="ColorizeMapShapes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" >

    <Grid x:Name="LayoutRoot" Background="White">
        <dxm:MapControl Name="mapControl1" >
            <dxm:VectorLayer>
                <dxm:VectorLayer.ShapeLoader>
                    <dxm:ShapefileLoader   
                         FileUri="/ColorizeMapShapes;component/Shapefiles/Countries.shp" ShapesLoaded="ShapefileLoader_ShapesLoaded" />
                </dxm:VectorLayer.ShapeLoader>
            </dxm:VectorLayer>
        </dxm:MapControl>
    </Grid>
</UserControl>
